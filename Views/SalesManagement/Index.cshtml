@model IEnumerable<SieuThi.Models.SalesManagement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<div class="container" style="text-align:center">
    <h1 class="MSM_green">Hóa Đơn</h1>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Ngay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TriGia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tensp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SoLuong)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ngay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TriGia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tensp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuong)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Mahoadon" class="btn btn-primary">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Mahoadon" class="btn btn-primary">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Mahoadon" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

